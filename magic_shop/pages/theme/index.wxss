/* pages/theme/index.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.top-img{
  display: block;
  width: 690rpx;
  height: 68rpx;
  margin-bottom: 20rpx;
}

.more-recommend {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.title {
  box-shadow: 0px 4px 10px rgba(9,36,66,0.04);
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 36rpx 36rpx 30rpx 36rpx;
}
.logo-wrapper{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.logo{
  width: 250rpx;
  height: 120rpx;
}
