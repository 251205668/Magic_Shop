/* pages/order/index.wxss */
.container{
  margin-bottom: 50rpx;
}
.order-container {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}

.price-view {
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #ffffff;
}

.total,
.discount {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 24rpx;
  color: #333333;
}

.bottom-button{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  display: flex;
  background-color: #ffffff;
}
.price-wrapper{
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  width: 550rpx;
  height: 88rpx;
}
.text{
  color: #333333;
  font-size: 28rpx;
}

.dialog-confirm {
  color: #9E2731 !important;
}

.dialog-content {
  display: flex;
  flex-direction: column;
  color: #666666;
  font-size: 24rpx;
}

.dialog-content text:before {
  content: '-';
  margin-right: 10rpx;
  color: #9E2731;
  /*color:red;*/
}

.dialog-title {
  color: #333333 !important;
}
