.container {
  display: flex;
  flex-direction: column;
}

.swiper {
  width: 100%;
  height: 680rpx;
}

.swiper-image {
  width: 100%;
  height: 680rpx;
}

.desc {
  display: flex;
  padding: 24rpx 30rpx 24rpx 30rpx;
  background-color: #ffffff;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: 560rpx;
}

.title {
  font-size: 30rpx;
  color: #333333;
  line-height: 40rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.tag {
  background-color: #DCEBE6 !important;
  height: 36rpx !important;
  color: #157658 !important;
  padding-left: 6rpx !important;
  padding-right: 6rpx !important;
  margin-right: 10rpx !important;
}

.sub-title {
  margin-top: 38rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  color: #999999
}

.price-container {
  margin-top: 26rpx;
  display: flex;
}

.price {
  margin-right: 20rpx;
}

.discount-pirce {
  margin-top: 5rpx;
}

.badge {
  margin-left: 40rpx;
}

.right {
  flex: 0 0 110rpx;
  padding-top: 14rpx;
  margin-left: 20rpx;
  width: 110rpx;
  display: flex;
  justify-content: flex-end;
}

.wrapper {
  padding-left: 30rpx;
  box-sizing: border-box;
  border-left: 1px dashed #DCEBE6;
  height: 130rpx;
}

.button {
  width: 50rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #DCEBE6;
  position: relative;
}

.share-text {
  font-size: 20rpx;
  color: #157658;
}

.selected {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx 30rpx 20rpx;
  margin-top: 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  max-height: 88rpx;
}

.info {
  display: flex;
  flex-direction: row;
}

.left {
  color: #999999;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.right-t {
  color: #157658;
  font-size: 24rpx;
}
.tabbar{
  position: fixed;
  bottom: 0;
}
.detail-imgs{
  width: 100%;
}
.detail-img{
  width: 100%;
}
