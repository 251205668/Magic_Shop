/* components/theme-C/index.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.top-img{
  width: 100%;
  height: 440rpx;
  margin-bottom: 10rpx;
}
.spu{
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  padding-right: 30rpx;
}
.content{
  width: 320rpx;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  box-shadow: 0px 0px 6px 0px rgba(221,221,221,0.5);
  box-sizing: border-box;
  padding: 30rpx;
}
.title{
  font-size: 26rpx;
  color: #333333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom:  6rpx;
}
.subtitle{
  color: #999999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 22rpx;
  margin-bottom: 32rpx;
}

.btn{
  margin-top: 6rpx;
}


