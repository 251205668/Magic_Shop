/* components/order-panel/index.wxss */
.sleeve {
  font-family: sleeve !important;
  font-size: 52rpx;
  font-style: normal;
  color: #157658 !important;
}

.container{
  box-sizing: border-box;
  width: 100%;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.inner-panel{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  width: 690rpx;
  height: 200rpx;
  box-shadow: 0px 0px 8px rgba(119,163,149,0.2);
  display: flex;
  flex-direction: column;
}
.title{
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 28rpx;
}
.item-row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  height: 90rpx;
}
.icon-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}
.icon-item text{
  color: #666666;
  font-size: 26rpx;
}

