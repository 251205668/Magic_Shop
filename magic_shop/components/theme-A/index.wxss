/* components/theme-A/index.wxss */
.container {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.img {
  width: 100%;
  height: 360rpx;
}

.desc {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  padding: 10rpx 0 40rpx 30rpx;
  color: #7e7e7e;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  background-color: #ffffff;
}
.title-A{
  margin-bottom: 30rpx;
}
.spu-List{
  width: 100%;
}
.inner-container{
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.spu-image{
  flex: 0 0 240rpx;
  width: 240rpx;
  height: 240rpx;
  margin-right: 40rpx;
}
.info{
  flex :1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 30rpx;
}
.title{
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.subtitle{
  margin-top: 12rpx;
  color: #9e9e9e;
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 20rpx;
}

