/* components/user-banner/index.wxss */

.container{
  box-sizing: border-box;
  width: 100%;
  height: 360rpx;
  background-color: #DCEBE6;
  display: flex;
  justify-content: center;
  align-items: center;
}
.inner-container{
  width: 690rpx;
  height: 260rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  padding-left: 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
}
.line{
  width: 4rpx;
  background-color: #999999;
  height: 50rpx;
}
.sleeve {
  font-family: sleeve !important;
  font-size: 36rpx;
  font-style: normal;
  color: #157658;
}

.avatar-container{
  position: relative;
  top: -18rpx;
}
.auth-btn{
  position: absolute;
  right: 0;
  top: 28rpx;
  background-color: #DCEBE6!important;
  border-top-left-radius: 60rpx;
  border-bottom-left-radius: 60rpx;
  font-size:24rpx;
  color: #157658;
}
.bottom-about{
  width: 430rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 100rpx;
  margin-bottom: 20rpx;
}
.left,.right{
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.left{
  border-right: 3rpx solid #D8D8D8;
  padding-right: 142rpx;
  margin-right: 144rpx;
}
.num{
  color: #157658;
  font-size: 38rpx;
  margin-bottom: -2rpx;
}
.desc{
  margin-top: 6rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  min-width: 100rpx;
  color: #999999;
  font-size: 24rpx;
}
