/* components/order-item/index.wxss */

.container{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.inner-container{
  width: 690rpx;
  height: 340rpx;
  background-color: #ffffff;
  box-shadow: 0px 0px 8px 0px rgba(119,163,149,0.2);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 15rpx;
  position: relative;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
.no{
  color:#999999;
  font-size: 24rpx;

}
.status{
  color:#157658;
  font-size: 25rpx;
}
.content{
  display: flex;
  box-sizing: border-box;
  padding: 10rpx;
}
.img{
  display: flex;
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.desc{
  display: flex;
  flex-direction: column;
  color: #333333;
  font-size: 24rpx;
}
.count{
  margin-top: 15rpx;
  color: #666666;
  font-size: 22rpx;
}

.bottom{
  position: absolute;
  bottom: 0;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.paid-time{
  color: #999999;
  font-size: 25rpx;
}
.price-wrapper{
  display: flex;
  color:#333333;
  font-size: 24rpx;
  margin-left: 90rpx!important;
}
.price{
  margin-top: -10rpx!important;
}



